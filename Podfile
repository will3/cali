# platform :ios, '9.0'

target 'cali' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for cali

  pod 'Layouts', :path => "./layouts/"
  pod 'Fabric'
  pod 'Crashlytics'
  
  target 'caliTests' do
    inherit! :search_paths
    # Pods for testing

    pod 'Quick'
    pod 'Nimble'
    pod 'Cuckoo'
  end

  target 'caliUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
